{
  "name": "boilerplate_express",
  "version": "1.0.0",
  "description": "this is the boilerplate code for expressjs app in typescript ",
  "main": "src/index.ts",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "nodemon -L index.ts",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "start": "ts-node index.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
    
  },
  "keywords": [
    "boilerplate",
    "express",
    "typescript"
  ],
  "author": "Abhinav Dhangar",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/winston": "^2.4.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "module-alias": "^2.2.3",
    "winston": "^3.13.0"
  },
  "_moduleAliases": {
    "@root": ".",
    "@src": "src",
    "@utils": "src/utils",
    "@configs": "src/configs"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
